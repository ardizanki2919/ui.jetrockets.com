
<article class="space-y-8 wrapper">
  <%= form_with url: root_path do |f| %>
    <div class="grid gap-x-4 md:grid-cols-2">
      <div class="form__group">
        <%= f.label :first_name %>
        <%= f.text_field :first_name, autofocus: true %>
      </div>
      <div class="form__group">
        <%= f.label :last_name %>
        <%= f.text_field :last_name %>
      </div>
    </div>

    <div class="form__group">
      <%= f.label :email %>
      <%= f.email_field :email, autocomplete:"email" %>
    </div>

    <div class="form__group">
      <%= f.label :password %>
      <%= f.password_field :password, help:"Password should contain at least 8 characters, including at least one letter and one number.", autocomplete:"current-password" %>
    </div>

    <div class="form__group">
      <%= f.check_box :free_shipping %>
    </div>

    <div class="form__group">
      <div class="flex flex-col gap-y-2">
        <%= f.radio_button :radio, "1", label: "Radio 1", checked: true %>
        <%= f.radio_button :radio, "2" %>
        <%= f.radio_button :radio, "3" %>
      </div>
    </div>

    <div class="form__group">
      <%= f.toggle :toggle, label: "Toggle me" %>
    </div>
  <% end %>
</article>
