<%
  set_meta_tags(
    title: "Homepage",
    description: "Our homepage is the best place to find out what we do and how we can help you.",
    keywords: "Site, Login, Members"
  )
%>

<div class="wrapper">
  <article class="wysiwyg">
    <h1>
      Hello from JetRockets
    </h1>
  </article>

  <div class="md:w-6/12">
    <%= form_with url: root_path do |f| %>
      <div class="grid grid-cols-2 gap-4">
        <%= f.text_field :first_name, autofocus: true %>
        <%= f.text_field :last_name %>
      </div>

      <%= f.email_field :email %>
      <%= f.password_field :password, help: "Password should contain at least 8 characters, including at least one letter and one number." %>
      <%= f.check_box :free_shipping, hint: "For orders shipped from $25 in books or $29 in other categories" %>
      <%#= f.radio_button :text, :true %>

      <%# Without Form Group %>
      <%#= f.label :first_name %>
      <%#= f.text_field :first_name, simple: true %>
    <% end %>
  </div>
</div>
