<%
  set_meta_tags(
    title: "Homepage",
    description: "Our homepage is the best place to find out what we do and how we can help you.",
    keywords: "Site, Login, Members"
  )
%>

<div class="space-y-8 wrapper">
  <h1 class="text-lg font-semibold">UI template of JetRockets</h1>

  <div class="md:w-8/12">
    <%= component "ui/accordion" do |accordion| %>
      <%= accordion.with_item(title: "Alerts", id: 'alerts', class: "space-y-2") do %>
        <%= component "ui/alert", type: :info do |alert| %>
          <strong>Info alert!</strong> Change a few things up and try submitting again.
        <% end %>

        <%= component "ui/alert", type: :error do |alert| %>
          <strong>Danger alert!</strong> Change a few things up and try submitting again.
        <% end %>

        <%= component "ui/alert", type: :success do |alert| %>
          <strong>Success alert!</strong> Change a few things up and try submitting again.
        <% end %>

        <%= component "ui/alert", type: :warning do |alert| %>
          <strong>Warning alert!</strong> Change a few things up and try submitting again.
        <% end %>

        <%= component "ui/alert" do |alert| %>
          <strong>Deafault alert!</strong> Change a few things up and try submitting again.
        <% end %>
      <% end %>

      <%= accordion.with_item(title: "Async Modal", id: 'modal') do %>
        <p class="mb-2 text-gray-600 dark:text-gray-400">
          By continuing, I agree to <%= site_name %>
          <%= link_to "Terms of Service", terms_path, data: { turbo_frame: :modal }, class: "link" %>,
          <%= link_to "Privacy Policy", privacy_path, data: { turbo_frame: :modal }, class: "link" %> and I confirm I am 18 years old.
        </p>
      <% end %>

      <%= accordion.with_item(title: "Badges", id: 'bages', class: "space-x-2") do %>
        <%= component "ui/badge", title: "Default" %>
        <%= component "ui/badge", title: "Blue", type: :blue %>
        <%= component "ui/badge", title: "Red", type: :red %>
        <%= component "ui/badge", title: "Green", type: :green %>
        <%= component "ui/badge", title: "Yellow", type: :yellow %>
        <%= component "ui/badge", title: "Indigo", type: :indigo %>
        <%= component "ui/badge", title: "Purple", type: :purple %>
        <%= component "ui/badge", title: "Pink", type: :pink %>
      <% end %>

      <%= accordion.with_item(title: "Buttons", id: 'buttons', class: "space-y-4") do %>
        <div class="gap-1">
          <%= component "ui/button", title: "Button XS", size: :xs %>
          <%= component "ui/button", title: "Button SM", size: :sm %>
          <%= component "ui/button", title: "Button MD", size: :md %>
          <%= component "ui/button", title: "Button LG", size: :lg %>
          <%= component "ui/button", title: "Button XL", size: :xl %>
        </div>

        <div class="gap-1">
          <%= component "ui/button", title: "Default XS" %>
          <%= component "ui/button", title: "Primary SM", variant: :primary %>
          <%= component "ui/button", title: "Secondary MD", variant: :secondary %>
          <%= component "ui/button", title: "Danger LG", variant: :danger %>
        </div>

        <div class="gap-1">
          <%= component "ui/button", title: "Default Outlined", outlined: true %>
          <%= component "ui/button", title: "Primary Outlined", variant: :primary, outlined: true %>
          <%= component "ui/button", title: "Secondary Outlined", variant: :secondary, outlined: true %>
          <%= component "ui/button", title: "Danger Outlined", variant: :danger, outlined: true %>
        </div>

        <div class="flex items-center gap-1">
          <%= component "ui/button", title: "Primary", variant: :primary %>
          <%= component "ui/button", title: "Secondary", variant: :secondary %>
          <%= component "ui/button" do %>
            <svg class="w-4 h-4 me-2" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" d="M15.182 15.182a4.5 4.5 0 0 1-6.364 0M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0ZM9.75 9.75c0 .414-.168.75-.375.75S9 10.164 9 9.75 9.168 9 9.375 9s.375.336.375.75Zm-.375 0h.008v.015h-.008V9.75Zm5.625 0c0 .414-.168.75-.375.75s-.375-.336-.375-.75.168-.75.375-.75.375.336.375.75Zm-.375 0h.008v.015h-.008V9.75Z" />
            </svg>
            <span>Iconed</span>
          <% end %>
        </div>

        <div>
          <strong class="block mt-6 mb-2 font-bold">Links</strong>
          <div class="space-x-2">
            <%= component "ui/button", title: "Terms and conditions", href: terms_path, data: { turbo_frame: :modal } %>
          </div>
        </div>
      <% end %>

      <%= accordion.with_item(title: "Dropdown Example", id: "accordion_dropdown") do %>
        <%= component "ui/dropdown", id: "dropdown" do |dropdown| %>
          <%= dropdown.with_button(variant: :primary) do %>
            Dropdown Button
            <svg class="w-2.5 h-2.5 ms-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 10 6">
              <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 4 4 4-4">
            </svg>
          <% end %>
          <%= dropdown.with_links([
            { name: "Dashboard", href: "#" },
            { name: "Settings", href: "#" },
            { name: "Terms of Service", href: terms_path, data: { turbo_frame: :modal } },
            { name: "Privacy Policy", href: privacy_path, data: { turbo_frame: :modal } },
          ]) %>
        <% end %>
      <% end %>

      <%= accordion.with_item(title: "Form Builder", id: 'form_builder') do %>
        <%= form_with url: root_path do |f| %>
          <div class="grid gap-x-4 md:grid-cols-2">
            <%= f.text_field :first_name, autofocus: true %>
            <%= f.text_field :last_name %>
          </div>
          <%= f.email_field :email, autocomplete: "email" %>
          <%= f.password_field :password, help: "Password should contain at least 8 characters, including at least one letter and one number.", autocomplete: "current-password" %>
          <%= f.check_box :free_shipping, hint: "For orders shipped from $25 in books or $29 in other categories" %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
