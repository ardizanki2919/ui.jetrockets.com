<% set_meta_tags(title: "Edit email") %>

<%= render Ui::Modal::Component.new(title: "Edit email", size: :lg) do %>
  <div class="modal__body">
    <%= form_with url: rodauth.change_login_path, method: :post, class: "form" do |form| %>
      <div class="form__group">
        <%= form.label "login", rodauth.login_label %>
        <%= form.email_field rodauth.login_param, value: params[rodauth.login_param], id: "login", autocomplete: "email", required: true, class: "#{"form__input-errored" if rodauth.field_error(rodauth.login_param)}" %>
        <% if rodauth.field_error(rodauth.login_param) %>
          <%= content_tag(:span, rodauth.field_error(rodauth.login_param), class: "form__error") %>
        <% end %>
      </div>

      <% if rodauth.require_login_confirmation? %>
        <div class="form__group">
          <%= form.label "login-confirm", rodauth.login_confirm_label %>
          <%= form.email_field rodauth.login_confirm_param, value: params[rodauth.login_confirm_param], id: "login-confirm", autocomplete: "email", required: true, class: "#{"form__input-errored" if rodauth.field_error(rodauth.login_confirm_param) }" %>
          <% if rodauth.field_error(rodauth.login_confirm_param) %>
            <%= content_tag(:span, rodauth.field_error(rodauth.login_confirm_param), class: "form__error") %>
          <% end %>
        </div>
      <% end %>

      <% if rodauth.change_login_requires_password? %>
        <div class="form__group">
          <%= form.label "password", rodauth.password_label %>
          <%= form.password_field rodauth.password_param, value: "", id: "password", autocomplete: rodauth.password_field_autocomplete_value, required: true, class: "#{"form__input-errored" if rodauth.field_error(rodauth.password_param)}" %>

          <% if rodauth.field_error(rodauth.password_param) %>
            <%= content_tag(:span, rodauth.field_error(rodauth.password_param), class: "form__error") %>
          <% end %>
        </div>
      <% end %>

      <div class="form__actions">
        <%= form.submit rodauth.change_login_button, class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
  </div>
<% end %>
