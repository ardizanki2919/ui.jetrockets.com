<div class="flex items-center justify-end flex-1 gap-2">
  <%= link_to render(Ui::Icon::Component.new icon: "github.svg", class: "size-8 mr-2"), "https://github.com/jetrockets/ui.jetrockets.com", target: "_blank", rel: "noopener noreferrer" %>

  <% if rodauth.logged_in? %>
    <%= render Ui::Dropdown::Component.new do |dropdown| %>
      <%= dropdown.with_trigger do %>
        <%= render Ui::Avatar::Component.new size: 8, full_name: current_user.full_name %>
      <% end %>
      <%= dropdown.with_menu do |list| %>
        <%= list.with_element_link(title: "Profile", href: user_profile_path, active: current_page?(user_profile_path)) %>
        <%= list.with_element_divider %>
        <%= list.with_element_button(title: "Sign Out", href: rodauth.logout_path, data: { turbo: false, turbo_method: :post }) %>
      <% end %>
    <% end %>
  <% else %>
    <%= link_to "Sign In", rodauth.login_path, class: "btn btn-primary btn-outlined btn-sm", data: { turbo_frame: :modal } %>
    <%= link_to "Sign Up", rodauth.create_account_path, class: "btn btn-primary btn-sm", data: { turbo_frame: :modal } %>
  <% end %>
</div>
