<%
  set_meta_tags(
    title: "Button Group - Rails UI Components",
    description: "Button Group component for grouping related buttons together.",
    keywords: "Rails, UI Components, Button Group"
  )
%>
<% breadcrumb :ui_button_group %>

<article>
  <header class="wysiwyg">
    <h1 class="h1">Button Group</h1>
    <p class="text-xl text-gray-600">
      Button Group component for grouping related buttons together.
    </p>
  </header>

  <section>
    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_button_group, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_button_group_path, data: { turbo_frame: :ui_button_group }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_button_group_path(code: true), data: { turbo_frame: :ui_button_group }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-2">
        <% unless params[:code] %>
          <%= render "ui/examples/button_group" %>
        <% else %>
          <%= render_code_example("ui/examples/_button_group") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>
