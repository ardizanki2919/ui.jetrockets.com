<div class="space-y-4">
  <p class="mb-2 text-gray-600">
    By continuing, I agree to <%= site_name %>
    <%= link_to "Terms of Service", terms_path, data: { turbo_frame: :drawer }, class: "link" %>,
    <%= link_to "Privacy Policy", privacy_path, data: { turbo_frame: :modal }, class: "link" %> and I confirm I am 18 years old.
  </p>

  <div class="flex gap-2">
    <%= render Ui::Btn::Component.new(variant: :primary, data: { modal_target: "trigger", modal_toggle: "modal", action: "click->modal#show", id: "modal1" }).with_content "Open modal" %>
    <%= render Ui::Modal::Component.new(title: "Modal Title", subtitle: "Modal Subtitle", async: false, id: "modal1") do %>
      <p class="p-4">Modal content</p>
    <% end %>

    <%= render Ui::Btn::Component.new(variant: :secondary, data: { modal_target: "trigger", modal_toggle: "modal", action: "click->modal#show", id: "modal2" }).with_content "Open another modal" %>
  </div>

  <%= render Ui::Modal::Component.new(title: "Another Modal", subtitle: "Another Modal Subtitle", async: false, id: "modal2") do %>
    <p class="p-4">This modal window is in the end of this code section</p>
  <% end %>
</div>