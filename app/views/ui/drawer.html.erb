<%
  set_meta_tags(
    title: "Drawer - Rails UI Components",
    description: "Drawer component for sliding panel overlays.",
    keywords: "Rails, UI Components, Drawer"
  )
%>
<% breadcrumb :ui_drawer %>

<article>
  <header class="wysiwyg">
    <h1 class="h1">Drawer</h1>
    <p class="text-xl text-gray-600">
      Drawer component for sliding panel overlays.
    </p>
  </header>

  <section>
    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_drawer, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_drawer_path, data: { turbo_frame: :ui_drawer }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_drawer_path(code: true), data: { turbo_frame: :ui_drawer }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-2">
        <% unless params[:code] %>
          <%= render "ui/examples/drawer" %>
        <% else %>
          <%= render_code_example("ui/examples/_drawer") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>
