<%
  set_meta_tags(
    title: "Tooltip - Rails UI Components",
    description: "Tooltip component for contextual help and information.",
    keywords: "Rails, UI Components, Tooltip"
  )
%>
<% breadcrumb :ui_tooltip %>

<article>
  <header class="wysiwyg">
    <h1 class="h1">Tooltip</h1>
    <p class="text-xl text-gray-600">
      Tooltip component for contextual help and information.
    </p>
  </header>

  <section>
    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_tooltip, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_tooltip_path, data: { turbo_frame: :ui_tooltip }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_tooltip_path(code: true), data: { turbo_frame: :ui_tooltip }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-2">
        <% unless params[:code] %>
          <%= render "ui/examples/tooltip" %>
        <% else %>
          <%= render_code_example("ui/examples/_tooltip") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>
