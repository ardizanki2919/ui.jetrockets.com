<%
  set_meta_tags(
    title: "Form Builder - Rails UI Components",
    description: "Form Builder component with enhanced form controls.",
    keywords: "Rails, UI Components, Form Builder"
  )
%>
<% breadcrumb :ui_form_builder %>

<article>
  <header class="wysiwyg">
    <h1 class="h1">Form Builder</h1>
    <p class="text-xl text-gray-600">
      Form Builder component with enhanced form controls.
    </p>
  </header>

  <section>
    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_form_builder, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_form_builder_path, data: { turbo_frame: :ui_form_builder }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_form_builder_path(code: true), data: { turbo_frame: :ui_form_builder }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-2">
        <% unless params[:code] %>
          <%= render "ui/examples/form_builder" %>
        <% else %>
          <%= render_code_example("ui/examples/_form_builder") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>
