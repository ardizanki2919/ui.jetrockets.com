<%
  set_meta_tags(
    title: "Modal - Rails UI Components",
    description: "Modal component for dialog overlays and popups.",
    keywords: "Rails, UI Components, Modal"
  )
%>
<% breadcrumb :ui_modal %>

<article>
  <header class="header">
    <div class="header__heading">
      <h1 class="header__title">Modal</h1>
      <p class="header__subtitle">
        Modal component for dialog overlays and popups.
      </p>
    </div>

    <div class="header__actions">
      <%= link_to "View on GitHub", "https://github.com/jetrockets/ui.jetrockets.com/tree/main/app/components/ui/modal", class: "btn btn-secondary", target: "_blank", rel: "noopener noreferrer" %>
    </div>
  </header>

  <section>
    <div class="flex flex-col gap-4 mb-12">
      <%= render Ui::Alert::Component.new title: "To use async Modal component, you need to have a <turbo-frame id='modal'> in your layout", variant: :warning do %>
        <pre class="w-full"><code>&lt;%= turbo_frame_tag :modal %&gt;</code></pre>
        <p class="font-semibold">And wrap response content with the modal component:</p>
        <pre class="w-full"><code>&lt;%= render Ui::Modal::Component.new(title: "Title HERE") do %&gt;
  ...
&lt;% end %&gt;</code></pre>
      <% end %>
    </div>

    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_modal, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_modal_path, data: { turbo_frame: :ui_modal }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_modal_path(code: true), data: { turbo_frame: :ui_modal }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-4 mb-12">
        <% unless params[:code] %>
          <%= render "ui/examples/modal" %>
        <% else %>
          <%= render_code_example("ui/examples/_modal") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>
