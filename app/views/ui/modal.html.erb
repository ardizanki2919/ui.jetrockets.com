<%
  set_meta_tags(
    title: "Modal - Rails UI Components",
    description: "Modal component for dialog overlays and popups.",
    keywords: "Rails, UI Components, Modal"
  )
%>
<% breadcrumb :ui_modal %>

<article>
  <header class="wysiwyg">
    <h1 class="h1">Modal</h1>
    <p class="text-xl text-gray-600">
      Modal component for dialog overlays and popups.
    </p>
  </header>

  <section>
    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_modal, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_modal_path, data: { turbo_frame: :ui_modal }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_modal_path(code: true), data: { turbo_frame: :ui_modal }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-2">
        <% unless params[:code] %>
          <%= render "ui/examples/modal" %>
        <% else %>
          <%= render_code_example("ui/examples/_modal") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>
