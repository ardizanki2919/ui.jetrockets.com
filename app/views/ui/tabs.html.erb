<%
  set_meta_tags(
    title: "Tabs - Rails UI Components",
    description: "Tabs component for organizing content into sections.",
    keywords: "Rails, UI Components, Tabs"
  )
%>
<% breadcrumb :ui_tabs %>

<article>
  <header class="wysiwyg">
    <h1 class="h1">Tabs</h1>
    <p class="text-xl text-gray-600">
      Tabs component for organizing content into sections.
    </p>
  </header>

  <section>
    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_tabs, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_tabs_path, data: { turbo_frame: :ui_tabs }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_tabs_path(code: true), data: { turbo_frame: :ui_tabs }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-2">
        <% unless params[:code] %>
          <%= render "ui/examples/tabs" %>
        <% else %>
          <%= render_code_example("ui/examples/_tabs") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>
