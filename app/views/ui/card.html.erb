<%
  set_meta_tags(
    title: "Card - Rails UI Components",
    description: "Card component for displaying grouped content.",
    keywords: "Rails, UI Components, Card"
  )
%>
<% breadcrumb :ui_card %>

<article>
  <header class="header">
    <div class="header__heading">
      <h1 class="header__title">Card</h1>
      <p class="header__subtitle">
        Card component for displaying grouped content.
      </p>
    </div>

    <div class="header__actions">
      <%= link_to "View on GitHub", "https://github.com/jetrockets/ui.jetrockets.com/tree/main/app/components/ui/card", class: "btn btn-secondary", target: "_blank", rel: "noopener noreferrer" %>
    </div>
  </header>

  <section class="flex flex-col gap-2 mb-12">
    <h2 class="h3">Basic Card</h2>

    <div class="max-w-md mb-4">
      <%= render Ui::Card::Component.new do |component| %>
        <% component.with_header align: :left, title: "Noteworthy technology acquisitions 2021" %>
        <% component.with_body do %>
          <p>This is the body of the card. You can put any content here.</p>
        <% end %>
        <% component.with_footer(align: :left) do %>
          <%= render Ui::Btn::Component.new(variant: :primary).with_content("Primary") %>
        <% end %>
      <% end %>
    </div>

    <pre><code>&lt;%= render Ui::Card::Component.new do |component| %&gt;
  &lt;% component.with_header align: :left, title: "Card Title" %&gt;
  &lt;% component.with_body do %&gt;
    &lt;p&gt;This is the body content of the card.&lt;/p&gt;
  &lt;% end %&gt;
  &lt;% component.with_footer(align: :left) do %&gt;
    &lt;%= render Ui::Btn::Component.new(variant: :primary).with_content("Action") %&gt;
  &lt;% end %&gt;
&lt;% end %&gt;</code></pre>
  </section>

  <section class="flex flex-col gap-2 my-12">
    <h2 class="h3">Bordered Card</h2>

    <div class="max-w-md mb-4">
      <%= render Ui::Card::Component.new(bordered: true) do |component| %>
        <% component.with_header align: :center, title: "Noteworthy technology acquisitions 2021" %>
        <% component.with_body do %>
          Here are the biggest enterprise technology acquisitions of 2021 so far, in reverse chronological order.
        <% end %>
        <% component.with_footer(align: :right) do %>
          <%= render Ui::Btn::Component.new(variant: :secondary).with_content("Secondary").with_icon_content("images/icons/user.svg") %>
        <% end %>
      <% end %>
    </div>

    <pre><code>&lt;%= render Ui::Card::Component.new(bordered: true) do |component| %&gt;
  &lt;% component.with_header align: :center, title: "Centered Title" %&gt;
  &lt;% component.with_body do %&gt;
    &lt;p&gt;Card content goes here...&lt;/p&gt;
  &lt;% end %&gt;
  &lt;% component.with_footer(align: :right) do %&gt;
    &lt;%= render Ui::Btn::Component.new(variant: :secondary).with_content("Action") %&gt;
  &lt;% end %&gt;
&lt;% end %&gt;</code></pre>
  </section>

  <section class="flex flex-col gap-2 my-12">
    <h2 class="h3">Body Only Card</h2>

    <div class="max-w-md mb-4">
      <%= render Ui::Card::Component.new do |component| %>
        <% component.with_body do %>
          <div class="space-y-3 text-center">
            <%= render Ui::Icon::Component.new(path: "images/icons/alert.svg", class: "w-12 h-12 mx-auto text-blue-600") %>
            <h3 class="text-lg font-semibold">Welcome!</h3>
            <p class="text-gray-600">Thank you for joining our community. Get started by exploring the features.</p>
            <%= render Ui::Btn::Component.new(variant: :primary, block: true).with_content("Get Started") %>
          </div>
        <% end %>
      <% end %>
    </div>

    <pre><code>&lt;%= render Ui::Card::Component.new do |component| %&gt;
  &lt;% component.with_body do %&gt;
    &lt;div class="text-center"&gt;
      &lt;h3&gt;Welcome!&lt;/h3&gt;
      &lt;p&gt;Card content without header or footer.&lt;/p&gt;
    &lt;/div&gt;
  &lt;% end %&gt;
&lt;% end %&gt;</code></pre>
  </section>
</article>
