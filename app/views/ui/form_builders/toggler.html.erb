<%
  set_meta_tags(
    title: "Toggler - Rails UI Components",
    description: "Toggle switch component with enhanced styling and accessibility features.",
    keywords: "Rails, UI Components, Toggle, Switch, Form"
  )
%>
<% breadcrumb :ui_form_builders_toggler %>

<article>
  <header class="header">
    <div class="header__heading">
      <h1 class="header__title">Rails <code class="px-1 text-3xl bg-yellow-100">check_box</code> as Toggler</h1>
      <p class="header__subtitle">
        A toggle switch component that enhances the standard Rails <code>check_box</code> with improved styling feature.
      </p>
    </div>

    <div class="header__actions">
      <%= link_to "View on GitHub", "https://github.com/jetrockets/ui.jetrockets.com/blob/main/app/lib/form_builders/fields/toggler_field.rb", class: "btn btn-secondary", target: "_blank", rel: "noopener noreferrer" %>
    </div>
  </header>

  <section class="mb-12">
    <%= render Ui::Card::Component.new do |component| %>
      <% component.with_header align: :left, title: "Basic Toggler" %>

      <% component.with_body do %>
        <%= form_with url: root_path do |f| %>
          <%= f.group do %>
            <%= f.toggler :dark_mode %>
          <% end %>

          <%= f.group do %>
            <%= f.toggler :notifications, hint: "Here you can have a hint" %>
          <% end %>
        <% end %>
      <% end %>

      <% component.with_footer do %>
        <pre class="w-full"><code>&lt;%= f.toggler :dark_mode %&gt;
&lt;%= f.toggler :dark_mode, hint: "Here you can have a hint" %&gt;</code></pre>
      <% end %>
    <% end %>
  </section>
</article>
