<%
  set_meta_tags(
    title: "Radio Button - Rails UI Components",
    description: "Radio button component with enhanced styling and accessibility features.",
    keywords: "Rails, UI Components, Radio Button, Form"
  )
%>
<% breadcrumb :ui_form_builders_radio_button %>

<article>
  <header class="header">
    <div class="header__heading">
      <h1 class="header__title">Radio Button</h1>
      <p class="header__subtitle">
        Enhanced radio button field with consistent styling, hint support, and improved accessibility for single-choice selection.
      </p>
    </div>

    <div class="header__actions">
      <%= link_to "View on GitHub", "https://github.com/jetrockets/ui.jetrockets.com/tree/main/app/lib/form_builders/fields/radio_button_field.rb", class: "btn btn-secondary", target: "_blank", rel: "noopener noreferrer" %>
    </div>
  </header>

  <section>
    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_form_builder, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_form_builders_radio_button_path, data: { turbo_frame: :ui_form_builder }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_form_builders_radio_button_path(code: true), data: { turbo_frame: :ui_form_builder }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-2">
        <% unless params[:code] %>
          <%= render "ui/form_builders/examples/radio_button" %>
        <% else %>
          <%= render_code_example("ui/form_builders/examples/_radio_button") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>