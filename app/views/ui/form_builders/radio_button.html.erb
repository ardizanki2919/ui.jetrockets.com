<%
  set_meta_tags(
    title: "Radio Button - Rails UI Components",
    description: "Radio button component with enhanced styling and accessibility features.",
    keywords: "Rails, UI Components, Radio Button, Form"
  )
%>
<% breadcrumb :ui_form_builders_radio_button %>

<article>
  <header class="header">
    <div class="header__heading">
      <h1 class="header__title">Rails <code class="px-1 text-3xl bg-yellow-100">radio_button</code> examples</h1>
      <p class="header__subtitle">
        Enhanced radio button field with consistent styling, hint support, and improved accessibility for single-choice selection.
      </p>
    </div>

    <div class="header__actions">
      <%= link_to "View on GitHub", "https://github.com/jetrockets/ui.jetrockets.com/tree/main/app/lib/form_builders/fields/radio_button_field.rb", class: "btn btn-secondary", target: "_blank", rel: "noopener noreferrer" %>
    </div>
  </header>

  <section class="mb-12">
    <%= render Ui::Card::Component.new do |component| %>
      <% component.with_header align: :left, title: "Basic Radio Button Groups" %>

      <% component.with_body do %>
        <%= form_with url: root_path do |f| %>
          <%= f.group class: "flex flex-col gap-2" do %>
            <%= f.radio_button :plan, "basic", label: "Basic Plan", hint: "$9/month" %>
            <%= f.radio_button :plan, "pro", checked: true, hint: "$19/month - Most popular" %>
            <%= f.radio_button :plan, "enterprise", label: "Enterprise Plan", hint: "$49/month" %>
          <% end %>

          <%= f.group class: "flex flex-col gap-2" do %>
            <%= f.radio_button :shipping, "standard", label: "Standard Shipping", hint: "5-7 business days" %>
            <%= f.radio_button :shipping, "express", label: "Express Shipping", hint: "2-3 business days" %>
            <%= f.radio_button :shipping, "overnight", label: "Overnight Shipping", hint: "Next business day" %>
          <% end %>
        <% end %>
      <% end %>

      <% component.with_footer do %>
        <pre class="w-full"><code>&lt;%= f.group class: "flex flex-col gap-2" do %&gt;
  &lt;%= f.radio_button :plan, "basic", label: "Basic Plan", hint: "$9/month" %&gt;
  &lt;%= f.radio_button :plan, "pro", checked: true, hint: "$19/month - Most popular" %&gt;
  &lt;%= f.radio_button :plan, "enterprise", label: "Enterprise Plan", hint: "$49/month" %&gt;
&lt;% end %&gt;

&lt;%= f.group class: "flex flex-col gap-2" do %&gt;
  &lt;%= f.radio_button :shipping, "standard", label: "Standard Shipping", hint: "5-7 business days" %&gt;
  &lt;%= f.radio_button :shipping, "express", label: "Express Shipping", hint: "2-3 business days" %&gt;
  &lt;%= f.radio_button :shipping, "overnight", label: "Overnight Shipping", hint: "Next business day" %&gt;
&lt;% end %&gt;</code></pre>
      <% end %>
    <% end %>
  </section>

  <section class="my-12">
    <%= render Ui::Card::Component.new do |component| %>
      <% component.with_header align: :left, title: "Custom Labels" %>

      <% component.with_body do %>
        <%= form_with url: root_path do |f| %>
          <%= f.group class: "flex flex-col gap-2" do %>
            <%= f.radio_button :custom_labels, "option1", label: "Custom Label Text" %>
            <%= f.radio_button :custom_labels, "option2", label: false %>
            <%= f.radio_button :custom_labels, "option3" %>
          <% end %>
        <% end %>
      <% end %>

      <% component.with_footer do %>
        <pre class="w-full"><code>&lt;%= f.group class: "flex flex-col gap-2" do %&gt;
  &lt;%= f.radio_button :custom_labels, "option1", label: "Custom Label Text" %&gt;
  &lt;%= f.radio_button :custom_labels, "option2", label: false %&gt;
  &lt;%= f.radio_button :custom_labels, "option3" %&gt;
&lt;% end %&gt;</code></pre>
      <% end %>
    <% end %>
  </section>

  <section class="my-12">
    <%= render Ui::Card::Component.new do |component| %>
      <% component.with_header align: :left, title: "Disabled State" %>

      <% component.with_body do %>
        <%= form_with url: root_path do |f| %>
          <%= f.group class: "flex flex-col gap-2" do %>
            <%= f.radio_button :disabled_group, "option1", checked: true, disabled: true %>
            <%= f.radio_button :disabled_group, "option2", disabled: true %>
          <% end %>
        <% end %>
      <% end %>

      <% component.with_footer do %>
        <pre class="w-full"><code>&lt;%= f.group class: "flex flex-col gap-2" do %&gt;
  &lt;%= f.radio_button :disabled_group, "option1", checked: true, disabled: true %&gt;
  &lt;%= f.radio_button :disabled_group, "option2", disabled: true %&gt;
&lt;% end %&gt;</code></pre>
      <% end %>
    <% end %>
  </section>
</article>