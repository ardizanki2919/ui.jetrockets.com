<%
  set_meta_tags(
    title: "Text Area - Rails UI Components",
    description: "Text area component with auto-grow functionality and enhanced styling.",
    keywords: "Rails, UI Components, Text Area, Form"
  )
%>
<% breadcrumb :ui_form_builders_text_area %>

<article>
  <header class="header">
    <div class="header__heading">
      <h1 class="header__title">Text Area</h1>
      <p class="header__subtitle">
        Enhanced text area field with auto-grow functionality, hint support, and consistent styling for multi-line text input.
      </p>
    </div>

    <div class="header__actions">
      <%= link_to "View on GitHub", "https://github.com/jetrockets/ui.jetrockets.com/tree/main/app/lib/form_builders/fields/text_field.rb", class: "btn btn-secondary", target: "_blank", rel: "noopener noreferrer" %>
    </div>
  </header>

  <section>
    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_form_builder, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_form_builders_text_area_path, data: { turbo_frame: :ui_form_builder }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_form_builders_text_area_path(code: true), data: { turbo_frame: :ui_form_builder }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-2">
        <% unless params[:code] %>
          <%= render "ui/form_builders/examples/text_area" %>
        <% else %>
          <%= render_code_example("ui/form_builders/examples/_text_area") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>