<%
  set_meta_tags(
    title: "Checkbox - Rails UI Components",
    description: "Checkbox component with enhanced styling and accessibility features.",
    keywords: "Rails, UI Components, Checkbox, Form"
  )
%>
<% breadcrumb :ui_form_builders_checkbox %>

<article>
  <header class="header">
    <div class="header__heading">
      <h1 class="header__title">Rails <code class="px-1 text-3xl bg-yellow-100">check_box</code> examples</h1>
      <p class="header__subtitle">
        Enhanced checkbox field with consistent styling, hint support, and improved accessibility for boolean input.
      </p>
    </div>

    <div class="header__actions">
      <%= link_to "View on GitHub", "https://github.com/jetrockets/ui.jetrockets.com/tree/main/app/lib/form_builders/fields/check_box_field.rb", class: "btn btn-secondary", target: "_blank", rel: "noopener noreferrer" %>
    </div>
  </header>

  <section class="mb-12">
    <%= render Ui::Card::Component.new do |component| %>
      <% component.with_header align: :left, title: "Basic Checkbox" %>
      <% component.with_body do %>
        <%= form_with url: root_path do |f| %>
          <%= f.group class: "form__checkbox_collection" do %>
            <%= f.check_box :newsletter, hint: "Receive weekly updates" %>
            <%= f.check_box :terms, required: true %>
            <%= f.check_box :free_shipping, checked: true, hint: "Free shipping for orders over $50" %>
          <% end %>
        <% end %>
      <% end %>

      <% component.with_footer do %>
        <pre class="w-full"><code>&lt;%= f.group class: "form__checkbox_collection" do %&gt;
  &lt;%= f.check_box :newsletter, hint: "Receive weekly updates" %&gt;
  &lt;%= f.check_box :terms, required: true %&gt;
  &lt;%= f.check_box :free_shipping, checked: true, hint: "Free shipping for orders over $50" %&gt;
&lt;% end %&gt;</code></pre>
      <% end %>
    <% end %>
  </section>

  <section class="my-12">
    <%= render Ui::Card::Component.new do |component| %>
      <% component.with_header align: :left, title: "Disabled State" %>

      <% component.with_body do %>
        <%= form_with url: root_path do |f| %>
          <%= f.check_box :disabled_checkbox, disabled: true %>
        <% end %>
      <% end %>

      <% component.with_footer do %>
        <pre class="w-full"><code>&lt;%= f.check_box :disabled_checkbox, disabled: true %&gt;</code></pre>
      <% end %>
    <% end %>
  </section>
</article>
