<%
  set_meta_tags(
    title: "Checkbox - Rails UI Components",
    description: "Checkbox component with enhanced styling and accessibility features.",
    keywords: "Rails, UI Components, Checkbox, Form"
  )
%>
<% breadcrumb :ui_form_builders_checkbox %>

<article>
  <header class="header">
    <div class="header__heading">
      <h1 class="header__title">Rails <code class="px-1 text-3xl bg-yellow-100">check_box</code> examples</h1>
      <p class="header__subtitle">
        Enhanced checkbox field with consistent styling, hint support, and improved accessibility for boolean input.
      </p>
    </div>

    <div class="header__actions">
      <%= link_to "View on GitHub", "https://github.com/jetrockets/ui.jetrockets.com/tree/main/app/lib/form_builders/fields/check_box_field.rb", class: "btn btn-secondary", target: "_blank", rel: "noopener noreferrer" %>
    </div>
  </header>

  <section class="mb-12">
    <%= render Ui::Card::Component.new do |component| %>
      <% component.with_header align: :left, title: "Basic Checkbox" %>
      <% component.with_body do %>
        <%= form_with url: root_path do |f| %>
          <%= f.group class: "form__checkbox_collection" do %>
            <%= f.check_box :newsletter %>
            <%= f.check_box :free_shipping, checked: true %>
          <% end %>
        <% end %>
      <% end %>

      <% component.with_footer do %>
        <pre class="w-full"><code>&lt;%= f.check_box :newsletter %&gt;
&lt;%= f.check_box :free_shipping, checked: true %&gt;</code></pre>
      <% end %>
    <% end %>
  </section>

  <section class="my-12">
    <%= render Ui::Card::Component.new do |component| %>
      <% component.with_header align: :left, title: "Label customization" %>

      <% component.with_body do %>
        <%= form_with url: root_path do |f| %>
          <%= f.group class: "form__checkbox_collection" do %>
            <%= f.check_box :custom_label, label: "Custom Label Text" %>
            <%= f.check_box :with_link, label: "I agree to the #{link_to 'terms and conditions', '#', class: 'link'}".html_safe %>
            <%= f.check_box :default_label %>
          <% end %>
        <% end %>
      <% end %>

      <% component.with_footer do %>
        <pre class="w-full"><code>&lt;%= f.check_box :custom_label, label: "Custom Label Text" %&gt;
&lt;%= f.check_box :with_link, label: "I agree to the #{link_to 'terms and conditions', '#', class: 'link'}".html_safe %&gt;
&lt;%= f.check_box :default_label %&gt;</code></pre>
      <% end %>
    <% end %>
  </section>

  <section class="my-12">
    <%= render Ui::Card::Component.new do |component| %>
      <% component.with_header align: :left, title: "Hint messages" %>

      <% component.with_body do %>
        <%= form_with url: root_path do |f| %>
          <%= f.check_box :receive_mails, hint: "Receive marketing emails" %>
        <% end %>
      <% end %>

      <% component.with_footer do %>
        <pre class="w-full"><code>&lt;%= f.check_box :receive_mail, hint: "Receive marketing emails" %&gt;</code></pre>
      <% end %>
    <% end %>
  </section>

  <section class="my-12">
    <%= render Ui::Card::Component.new do |component| %>
      <% component.with_header align: :left, title: "Disabled State" %>

      <% component.with_body do %>
        <%= form_with url: root_path do |f| %>
          <%= f.group class: "form__checkbox_collection" do %>
            <%= f.check_box :disabled_checkbox, disabled: true %>
            <%= f.check_box :disabled_checkbox_checked, checked: true, disabled: true %>
          <% end %>
        <% end %>
      <% end %>

      <% component.with_footer do %>
        <pre class="w-full"><code>&lt;%= f.check_box :disabled_checkbox, disabled: true %&gt;
&lt;%= f.check_box :disabled_checkbox_checked, checked: true, disabled: true %&gt;
        </code></pre>
      <% end %>
    <% end %>
  </section>

  <section class="my-12">
    <%= render Ui::Card::Component.new do |component| %>
      <% component.with_header align: :left, title: "Validation" %>

      <% component.with_body do %>
        <% user = User.new %>
        <% user.errors.add(:terms_and_conditions, "is required") %>
        <%= form_with model: user, url: root_path do |f| %>
          <%= f.check_box :terms_and_conditions, label: "I agree to the terms and conditions" %>
        <% end %>

        <hr class="hr my-4">

        <%= form_with url: root_path do |f| %>
          <%= f.check_box :custom_error, error: "Custom error" %>
        <% end %>
      <% end %>

      <% component.with_footer do %>
        <pre class="w-full"><code>&lt;!-- Active Record Validations works automatically --&gt;
&lt;%= f.check_box :terms_and_conditions, label: "I agree to the terms and conditions" %&gt;

&lt;!-- You are able to add custom error messages --&gt;
&lt;%= f.check_box :free_shipping, error: "Custom error" %&gt;</code></pre>
      <% end %>
    <% end %>
  </section>
</article>
