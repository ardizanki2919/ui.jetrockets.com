<%
  set_meta_tags(
    title: "Easepick - Rails UI Components",
    description: "Date picker component with enhanced functionality using Easepick library.",
    keywords: "Rails, UI Components, Date Picker, Easepick, Form"
  )
%>
<% breadcrumb :ui_form_builders_easepick %>

<article>
  <header class="header">
    <div class="header__heading">
      <h1 class="header__title">Easepick</h1>
      <p class="header__subtitle">
        Enhanced date picker field with powerful calendar functionality, multiple plugins support, and consistent styling using Easepick library.
      </p>
    </div>

    <div class="header__actions">
      <%= link_to "View on GitHub", "https://github.com/jetrockets/ui.jetrockets.com/tree/main/app/lib/form_builders/fields/easepick_field.rb", class: "btn btn-secondary", target: "_blank", rel: "noopener noreferrer" %>
    </div>
  </header>

  <section>
    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_form_builder, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_form_builders_easepick_path, data: { turbo_frame: :ui_form_builder }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_form_builders_easepick_path(code: true), data: { turbo_frame: :ui_form_builder }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-2">
        <% unless params[:code] %>
          <%= render "ui/form_builders/examples/easepick" %>
        <% else %>
          <%= render_code_example("ui/form_builders/examples/_easepick") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>