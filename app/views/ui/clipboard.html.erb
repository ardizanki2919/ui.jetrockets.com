<%
  set_meta_tags(
    title: "Clipboard - Rails UI Components",
    description: "Clipboard component for copying content to clipboard.",
    keywords: "Rails, UI Components, Clipboard"
  )
%>
<% breadcrumb :ui_clipboard %>

<article>
  <header class="wysiwyg">
    <h1 class="h1">Clipboard</h1>
    <p class="text-xl text-gray-600">
      Clipboard component for copying content to clipboard.
    </p>
  </header>

  <section>
    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_clipboard, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_clipboard_path, data: { turbo_frame: :ui_clipboard }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_clipboard_path(code: true), data: { turbo_frame: :ui_clipboard }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-2">
        <% unless params[:code] %>
          <%= render "ui/examples/clipboard" %>
        <% else %>
          <%= render_code_example("ui/examples/_clipboard") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>
