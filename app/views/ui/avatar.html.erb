<%
  set_meta_tags(
    title: "Avatar - Rails UI Components",
    description: "Display user profile images and initials.",
    keywords: "Rails, UI Components, Avatar"
  )
%>
<% breadcrumb :ui_avatar %>

<article>
  <header class="header">
    <div class="header__heading">
      <h1 class="header__title">Avatar</h1>
      <p class="header__subtitle">
        Display user profile images and initials.
      </p>
    </div>

    <div class="header__actions">
      <%= link_to "View on GitHub", "https://github.com/jetrockets/ui.jetrockets.com/tree/main/app/components/ui/avatar", class: "btn btn-secondary", target: "_blank", rel: "noopener noreferrer" %>
    </div>
  </header>

  <section>
    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_avatar, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_avatar_path, data: { turbo_frame: :ui_avatar }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_avatar_path(code: true), data: { turbo_frame: :ui_avatar }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-2">
        <% unless params[:code] %>
          <%= render "ui/examples/avatar" %>
        <% else %>
          <%= render_code_example("ui/examples/_avatar") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>
