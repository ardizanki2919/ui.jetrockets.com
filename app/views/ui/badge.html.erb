<%
  set_meta_tags(
    title: "Badge - Rails UI Components",
    description: "Badge component for displaying status and labels.",
    keywords: "Rails, UI Components, Badge"
  )
%>
<% breadcrumb :ui_avatar %>

<article>
  <header class="wysiwyg">
    <h1 class="h1">Badge</h1>
    <p class="text-xl text-gray-600">
      Badge component for displaying status and labels.
    </p>
  </header>

  <section>
    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_badge, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_badge_path, data: { turbo_frame: :ui_badge }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_badge_path(code: true), data: { turbo_frame: :ui_badge }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-2">
        <% unless params[:code] %>
          <%= render "ui/examples/badge" %>
        <% else %>
          <%= render_code_example("ui/examples/_badge") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>
