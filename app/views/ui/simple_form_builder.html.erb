<%
  set_meta_tags(
    title: "Form Builder - Rails UI Components",
    description: "Form Builder component with enhanced form controls.",
    keywords: "Rails, UI Components, Form Builder"
  )
%>
<% breadcrumb :ui_simple_form_builder %>

<article>
  <header class="header">
    <div class="header__heading">
      <h1 class="header__title">Simple Form Builder</h1>
      <p class="header__subtitle">
        Form Builder component with enhanced form controls.
      </p>
    </div>

    <div class="header__actions">
      <%= link_to "View on GitHub", "https://github.com/jetrockets/ui.jetrockets.com/tree/main/app/lib/form_builders/simple_form_builder.rb", class: "btn btn-secondary", target: "_blank", rel: "noopener noreferrer" %>
    </div>
  </header>

  <section>
    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_form_builder, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_simple_form_builder_path, data: { turbo_frame: :ui_form_builder }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_simple_form_builder_path(code: true), data: { turbo_frame: :ui_form_builder }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-2">
        <% unless params[:code] %>
          <%= render "ui/examples/simple_form_builder" %>
        <% else %>
          <%= render_code_example("ui/examples/_simple_form_builder") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>
