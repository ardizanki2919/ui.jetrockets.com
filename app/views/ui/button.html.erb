<%
  set_meta_tags(
    title: "Button - Rails UI Components",
    description: "Button component for user actions and navigation.",
    keywords: "Rails, UI Components, Button"
  )
%>
<% breadcrumb :ui_button %>

<article>
  <header class="header">
    <div class="header__heading">
      <h1 class="header__title">Button</h1>
      <p class="header__subtitle">
        Button component for user actions and navigation.
      </p>
    </div>

    <div class="header__actions">
      <%= link_to "View on GitHub", "https://github.com/jetrockets/ui.jetrockets.com/tree/main/app/components/ui/btn", class: "btn btn-secondary", target: "_blank", rel: "noopener noreferrer" %>
    </div>
  </header>

  <section class="flex flex-col gap-2 mb-12">
    <h2 class="h3">Basic Variants</h2>

    <div class="flex flex-wrap items-center gap-1 mb-4">
      <%= render Ui::Btn::Component.new.with_content "Default" %>
      <%= render Ui::Btn::Component.new(variant: :primary).with_content "Primary" %>
      <%= render Ui::Btn::Component.new(variant: :secondary).with_content "Secondary" %>
      <%= render Ui::Btn::Component.new(variant: :danger).with_content "Danger" %>
    </div>

    <pre><code>&lt;%= render Ui::Btn::Component.new.with_content "Default" %&gt;
&lt;%= render Ui::Btn::Component.new(variant: :primary).with_content "Primary" %&gt;
&lt;%= render Ui::Btn::Component.new(variant: :secondary).with_content "Secondary" %&gt;
&lt;%= render Ui::Btn::Component.new(variant: :danger).with_content "Danger" %&gt;</code></pre>
  </section>

  <section class="flex flex-col gap-2 my-12">
    <h2 class="h3">Sizes</h2>

    <div class="flex flex-wrap items-end gap-1 mb-4">
      <%= render Ui::Btn::Component.new(size: :xl).with_content "Button XL" %>
      <%= render Ui::Btn::Component.new(size: :lg).with_content "Button LG" %>
      <%= render Ui::Btn::Component.new(size: :md).with_content "Button MD" %>
      <%= render Ui::Btn::Component.new(size: :sm).with_content "Button SM" %>
      <%= render Ui::Btn::Component.new(size: :xs).with_content "Button XS" %>
    </div>

    <pre><code>&lt;%= render Ui::Btn::Component.new(size: :xl).with_content "Button XL" %&gt;
&lt;%= render Ui::Btn::Component.new(size: :lg).with_content "Button LG" %&gt;
&lt;%= render Ui::Btn::Component.new(size: :md).with_content "Button MD" %&gt;
&lt;%= render Ui::Btn::Component.new(size: :sm).with_content "Button SM" %&gt;
&lt;%= render Ui::Btn::Component.new(size: :xs).with_content "Button XS" %&gt;</code></pre>
  </section>

  <section class="flex flex-col gap-2 my-12">
    <h2 class="h3">Outlined Variants</h2>

    <div class="flex flex-wrap items-center gap-1 mb-4">
      <%= render Ui::Btn::Component.new(outlined: true).with_content "Default Outlined" %>
      <%= render Ui::Btn::Component.new(variant: :primary, outlined: true).with_content "Primary Outlined" %>
      <%= render Ui::Btn::Component.new(variant: :secondary, outlined: true).with_content "Secondary Outlined" %>
      <%= render Ui::Btn::Component.new(variant: :danger, outlined: true).with_content "Danger Outlined" %>
    </div>

    <pre><code>&lt;%= render Ui::Btn::Component.new(outlined: true).with_content "Default Outlined" %&gt;
&lt;%= render Ui::Btn::Component.new(variant: :primary, outlined: true).with_content "Primary Outlined" %&gt;
&lt;%= render Ui::Btn::Component.new(variant: :secondary, outlined: true).with_content "Secondary Outlined" %&gt;
&lt;%= render Ui::Btn::Component.new(variant: :danger, outlined: true).with_content "Danger Outlined" %&gt;</code></pre>
  </section>

  <section class="flex flex-col gap-2 my-12">
    <h2 class="h3">With Icons</h2>

    <div class="flex flex-wrap items-center gap-1 mb-4">
      <%= render Ui::Btn::Component.new.with_content("Default").with_icon_content("user.svg") %>
      <%= render Ui::Btn::Component.new(variant: :primary).with_content("Primary").with_icon_content("user.svg") %>
      <%= render Ui::Btn::Component.new(variant: :secondary).with_content("Secondary").with_icon_content("user.svg") %>
      <%= render Ui::Btn::Component.new(variant: :danger).with_content("Danger").with_icon_content("user.svg") %>
    </div>

    <pre><code>&lt;%= render Ui::Btn::Component.new.with_content("Default").with_icon_content("user.svg") %&gt;
&lt;%= render Ui::Btn::Component.new(variant: :primary).with_content("Primary").with_icon_content("user.svg") %&gt;
&lt;%= render Ui::Btn::Component.new(variant: :secondary).with_content("Secondary").with_icon_content("user.svg") %&gt;
&lt;%= render Ui::Btn::Component.new(variant: :danger).with_content("Danger").with_icon_content("user.svg") %&gt;</code></pre>
  </section>

  <section class="flex flex-col gap-2 my-12">
    <h2 class="h3">Special Styles</h2>

    <div class="mb-4 space-y-3">
      <div class="flex flex-wrap items-center gap-2">
        <%= render Ui::Btn::Component.new(variant: :ghost).with_content "Ghost" %>
        <%= render Ui::Btn::Component.new(variant: :primary, rounded: true).with_content "Rounded" %>
      </div>
      <div class="flex flex-wrap items-center gap-2">
        <%= render Ui::Btn::Component.new(circle: true, size: :xs).with_icon_content("user.svg") %>
        <%= render Ui::Btn::Component.new(variant: :primary, circle: true, size: :sm).with_icon_content("user.svg") %>
        <%= render Ui::Btn::Component.new(variant: :secondary, circle: true, size: :md).with_icon_content("user.svg") %>
        <%= render Ui::Btn::Component.new(variant: :danger, circle: true, size: :lg).with_icon_content("user.svg") %>
        <%= render Ui::Btn::Component.new(variant: :primary, outlined: true, circle: true, size: :xl).with_icon_content("user.svg") %>
      </div>
      <div>
        <%= render Ui::Btn::Component.new(block: true, variant: :primary, size: :lg).with_content("Block Button").with_icon_content("user.svg") %>
      </div>
    </div>

    <pre><code>&lt;%= render Ui::Btn::Component.new(variant: :ghost).with_content "Ghost" %&gt;
&lt;%= render Ui::Btn::Component.new(variant: :primary, rounded: true).with_content "Rounded" %&gt;

&lt;!-- Circle buttons --&gt;
&lt;%= render Ui::Btn::Component.new(circle: true, size: :sm).with_icon_content("user.svg") %&gt;

&lt;!-- Block button --&gt;
&lt;%= render Ui::Btn::Component.new(block: true, variant: :primary).with_content("Block Button") %&gt;</code></pre>
  </section>

  <section class="flex flex-col gap-2 my-12">
    <h2 class="h3">As Links</h2>

    <div class="mb-4 space-y-2">
      <%= render Ui::Btn::Component.new(href: "#", variant: :primary).with_content "Link Button" %>
      <%= render Ui::Btn::Component.new(href: "#", variant: :link).with_content "Link" %>
      <%= render Ui::Btn::Component.new(href: "#", variant: :ghost).with_content "Link Ghost" %>
    </div>

    <pre><code>&lt;%= render Ui::Btn::Component.new(href: root_path, variant: :primary).with_content "Link Button" %&gt;
&lt;%= render Ui::Btn::Component.new(href: root_path, variant: :link).with_content "Link" %&gt;
&lt;%= render Ui::Btn::Component.new(href: root_path, variant: :ghost).with_content "Link Ghost" %&gt;</code></pre>
  </section>
</article>
