<%
  set_meta_tags(
    title: "Typography - Rails UI Components",
    description: "Typography styles and text formatting utilities.",
    keywords: "Rails, UI Components, Typography"
  )
%>
<% breadcrumb :ui_typography %>

<article>
  <header class="wysiwyg">
    <h1 class="h1">Typography</h1>
    <p class="text-xl text-gray-600">
      Typography styles and text formatting utilities.
    </p>
  </header>

  <section>
    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_typography, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_typography_path, data: { turbo_frame: :ui_typography }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_typography_path(code: true), data: { turbo_frame: :ui_typography }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-2">
        <% unless params[:code] %>
          <%= render "ui/examples/typography" %>
        <% else %>
          <%= render_code_example("ui/examples/_typography") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>
