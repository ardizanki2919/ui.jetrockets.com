<%
  set_meta_tags(
    title: "Icon - Rails UI Components",
    description: "Icon component for SVG icons integration.",
    keywords: "Rails, UI Components, Icon"
  )
%>
<% breadcrumb :ui_icon %>

<article>
  <header class="wysiwyg">
    <h1 class="h1">Icon</h1>
    <p class="text-xl text-gray-600">
      Icon component for SVG icons integration.
    </p>
  </header>

  <section>
    <h2 class="h3">Example</h2>
    <%= turbo_frame_tag :ui_icon, data: { turbo_action: :advance }, target: :_top do %>
      <%= render Ui::Tabs::Component.new class: "mb-6" do |tabs| %>
        <% tabs.with_item title: "Preview", href: ui_icon_path, data: { turbo_frame: :ui_icon }, active: !params[:code] %>
        <% tabs.with_item title: "Code", href: ui_icon_path(code: true), data: { turbo_frame: :ui_icon }, active: params[:code] %>
      <% end %>

      <div class="flex flex-col gap-2">
        <% unless params[:code] %>
          <%= render "ui/examples/icon" %>
        <% else %>
          <%= render_code_example("ui/examples/_icon") %>
        <% end %>
      </div>
    <% end %>
  </section>
</article>
