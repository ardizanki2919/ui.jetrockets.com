<%= turbo_frame_tag :flash, class: "flash", target: :_top, refresh: :morph do %>
  <% flash.each do |key, message| %>
    <% next if message.blank? %>

    <%= content_tag :div, class: "flash__container hidden #{tailwind_classes_for(key)}", id: "flash-#{key}", **data_attrs do %>
      <p class="flex-1">
        <%== message %>
      </p>
      <% if @dismissible %>
        <button class="flash__close" type="button" data-action="flash#close" aria-label="Close">
          <%= helpers.vite_svg_tag "images/icons/close.svg", class: "w-5 h-5" %>
          <span class="sr-only">Close</span>
        </button>
      <% end %>
    <% end %>
  <% end %>
<% end %>
